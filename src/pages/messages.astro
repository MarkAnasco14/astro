---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import EmpyState from '../components/EmpyState.astro'
import { Modal } from 'accessible-astro-components'

---

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<DefaultLayout title="Messages">
  <section>
    <h4>MyClasses</h4><br>

    <div class="btn-group">
      <button type="button" class="btn btn-primary" id="schoolYearButton">Schoolyear</button>
      <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="visually-hidden">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">2021-2022</a></li>
        <li><a class="dropdown-item" href="#">2022-2023</a></li>
        <li><a class="dropdown-item" href="#">2024-2025</a></li>
        <li><a class="dropdown-item" href="#">2026-2027</a></li>
      </ul>
    </div>
    <div class="btn-group">
      <button type="button" class="btn btn-primary">Semester</button>
      <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="visually-hidden">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">1st sem</a></li>
        <li><a class="dropdown-item" href="#">2nd sem</a></li>
        <li><a class="dropdown-item" href="#">summer</a></li>
      </ul>
    </div>
    <div class="btn-group">
      <button type="button" class="btn btn-primary">Subject</button>
      <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
        <span class="visually-hidden">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">IT 121</a></li>
        <li><a class="dropdown-item" href="#">IT 123</a></li>
        <li><a class="dropdown-item" href="#">IT 241</a></li>
      </ul>
    </div>
  </section>

  <section class="margin-32 student-grades-section">
    <input class="btn btn-outline-primary" type="student" value="Student">
    <input class="btn btn-outline-primary" type="grades" value="grades">
  </section>

  <script>
    const schoolYearButton = document.getElementById('schoolYearButton');
    const studentGradesSection = document.querySelector('.student-grades-section');

    schoolYearButton.addEventListener('click', () => {
      // Check if a school year dropdown item is selected
      const isSelected = studentGradesSection.classList.contains('show');

      if (isSelected) {
        studentGradesSection.classList.remove('show');
      } else {
        studentGradesSection.classList.add('show');
      }
    });
  </script>
</style>
